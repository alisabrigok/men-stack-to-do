<% include ../partials/header %>

<div class="todo u-animateBottom">
    <div class="todo__navigation">
        <a class="todo__navigation--unselected" href = "/todos" > All </a>
        <a class="todo__navigation--unselected" href = "/todos/pending" > Pending </a>
        <a class="todo__navigation--unselected" href = "/todos/done" > Done </a>
    </div>

    <h1>
        <span class="u-ellipsis">
            <a href="/user/<%= currentUser.id %>">
                <span>
                    <i class="fa fa-user"></i> 
                    <%= currentUser.username.charAt(0).toUpperCase() + currentUser.username.slice(1) %>
                </span>
            </a>'s To-Do
        </span>
        <a href="/logout">
            <i class="fa fa-sign-out"></i>
        </a>
    </h1>

    <% if (error && error.length > 0) { %>
        <h1 class="u-error">
            <i class="fa fa-times"></i> <%= error %>
        </h1>
    <% } else if (success && success.length > 0) { %>
        <h1 class="u-success">
            <i class="fa fa-check"></i> <%= success %>
            <span class="u-close">
                <i class="fa fa-times"></i>
                <span class="u-close__timer">
                    (3)
                </span>
            </span>
        </h1>
    <% } %>

    <form action="/user/<%= currentUser.id %>?_method=PUT" method="POST">
        <input type="text" class="login-input" name="username" value="<%= username %>" placeholder="Your Username" required>
        <input type="password" class="login-input" name="password" value="oldpassword" placeholder="Your Password" required>
        <button class="btn-3d btn-3d--secondary" type="submit">UPDATE <i class="fa fa-edit"></i></button>
    </form>

    <form action="/user/<%= currentUser._id %>?_method=DELETE" method="POST">
        <button class="btn-flat">
            <i class="fa fa-trash fa-lg"></i> Delete My Account!   
        </button>
    </form> 
</div>
<% include ../partials/footer %>
